@model IEnumerable<Vidly.Models.Movie>
@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2 style="margin-left: 2rem;">Movies</h2>

<div class="container mb-3 mt-3">

    <table id="movies" class="table table-striped table-bordered table-hover nowrap" style="width:100%">
        <thead>
            <tr class="table-primary">
                <th style="width: 40%">Name</th>
                <th style="width: 30%">Genre</th>
                <th style="width: 30%;">Number In Stock</th>
            </tr>
        </thead>
    </table>
</div>


@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable({
                "language": {
                    "lengthMenu": "Display records per page _MENU_ ",
                    "info": "Showing page _PAGE_ of _PAGES_",
                    "infoEmpty": "No records available",
                    "infoFiltered": "(filtered from _MAX_ total records)"
                },
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "genre.name"
                    },
                    {
                        data: "numberInStock"
                    }
                ]
            });
        });
    </script>

}


